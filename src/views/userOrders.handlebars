<header class="header">
    {{> userNav}}

    <div class="users-container" id="users-container">
        <h2>Ordenes de Compra</h2>
        {{#if hasOrders}}
            <section class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th class="order-th">NÂ° de Orden</th>
                            <th>Fecha y hora</th>
                            <th class="items-th">Items</th>
                        </tr>
                    </thead>
                    <tbody id="list-products">
                        {{#each orders}}
                            <tr>
                                <td class="order-td">{{this.order}}</td>
                                <td>{{this.created_at}}</td>
                                <td class="items-td"> 
                                    {{#each items}}
                                        <p class="order-item">- {{this.product}} x{{this.quantity}}</p>
                                    {{/each}}
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </section>
        {{else}}
            <p>No hay ordenes generadas</p>
        {{/if}}
    </div>
</header>